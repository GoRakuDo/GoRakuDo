{
  "name": "gorakudo-astro",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "npm run lint && astro check && astro build && npm run stylelint",
    "build:quality": "npm run quality && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx,.astro",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx,.astro --fix",
    "format": "prettier --write src/**/*.{ts,tsx,js,jsx,json,css,md}",
    "format:check": "prettier --check src/**/*.{ts,tsx,js,jsx,json,css,md}",
    "quality": "npm run lint && npm run format:check && npm run type-check",
    "stylelint": "stylelint \"src/**/*.{css,scss,vue,astro}\" --ignore-pattern \"src/styles/docs/docs.css\"",
    "stylelint:fix": "stylelint \"**/*.{css,scss,vue,astro}\" --fix",
    "stylelint:file": "stylelint",
    "stylelint:all": "stylelint \"src/**/*.{css,scss,vue,astro,ts,tsx,js,jsx}\" --ignore-pattern \"src/styles/docs/docs.css\"",
    "stylelint:css-only": "stylelint \"src/**/*.{css,scss,vue,astro}\" --ignore-pattern \"src/styles/docs/docs.css\"",
    "stylelint:ts-css": "stylelint \"src/**/*.{ts,tsx,js,jsx}\" --ignore-pattern \"src/styles/docs/docs.css\""
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/vue": "^5.1.0",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.13",
    "astro": "^5.13.0",
    "astro-mcp": "^0.4.1",
    "dotenv": "^17.2.1",
    "fuse.js": "^7.1.0",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "vue": "^3.5.18"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.4.0",
    "espree": "^10.4.0",
    "jsdom": "^26.1.0",
    "postcss-html": "^1.8.0",
    "prettier": "^3.6.2",
    "stylelint": "^16.24.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recess-order": "^7.3.0",
    "stylelint-config-recommended-scss": "^16.0.1",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "vitest": "^3.2.4",
    "vue-eslint-parser": "^10.2.0"
  }
}
