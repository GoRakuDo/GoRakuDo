{
  "name": "gorakudo-astro",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "npm run stylelint && npm run lint && astro check && npm run process-auto-dates:fast && astro build",
    "build:quality": "npm run quality && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.js,.astro",
    "lint:fix": "eslint src --ext .ts,.js,.astro --fix",
    "format": "prettier --write src/**/*.{ts,js,json,css,md}",
    "format:check": "prettier --check src/**/*.{ts,js,json,css,md}",
    "quality": "npm run lint && npm run format:check && npm run type-check",
    "stylelint": "stylelint \"src/**/*.{css,scss,vue,astro}\" --fix",
    "stylelint:fix": "stylelint \"**/*.{css,scss,vue,astro}\" --fix",
    "process-auto-dates": "tsx src/scripts/type-scripts/auto-date/processor-basic.ts",
    "process-auto-dates:fast": "tsx src/scripts/type-scripts/auto-date/processor-efficient.ts",
    "process-auto-dates:clear": "tsx src/scripts/type-scripts/auto-date/processor-efficient.ts --clear-cache",
    "dev:watch-dates": "tsx src/scripts/type-scripts/auto-date/watcher.ts",
    "stylelint:file": "stylelint",
    "stylelint:all": "stylelint \"src/**/*.{css,scss,vue,astro,ts,tsx,js,jsx}\" ",
    "stylelint:css-only": "stylelint \"src/**/*.{css,scss,vue,astro}\"",
    "stylelint:ts-css": "stylelint \"src/**/*.{ts,tsx,js,jsx}\""
  },
  "dependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/mdx": "^4.3.6",
    "@astrojs/sitemap": "^3.6.0",
    "@fontsource-variable/roboto-flex": "^5.2.8",
    "@fontsource-variable/roboto-serif": "^5.2.8",
    "@fontsource/noto-sans-jp": "^5.2.8",
    "@fontsource/noto-serif-jp": "^5.2.7",
    "@fontsource/yuji-syuku": "^5.2.7",
    "@tailwindcss/vite": "^4.1.13",
    "astro": "^5.13.0",
    "astro-cloudinary": "^1.3.5",
    "astro-icon": "^1.1.5",
    "astro-mcp": "^0.4.1",
    "dompurify": "^3.2.7",
    "fuse.js": "^7.1.0",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.8.0",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.4.0",
    "espree": "^10.4.0",
    "jsdom": "^26.1.0",
    "postcss-html": "^1.8.0",
    "prettier": "^3.6.2",
    "stylelint": "^16.24.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recess-order": "^7.3.0",
    "stylelint-config-recommended-scss": "^16.0.1",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "tsx": "^4.20.6",
    "vite-plugin-compression": "^0.5.1",
    "vitest": "^3.2.4",
    "vue-eslint-parser": "^10.2.0"
  },
  "overrides": {
    "lodash": "^4.17.21"
  }
}
