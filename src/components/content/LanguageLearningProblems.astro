---
// LanguageLearningProblems Component - 言語学習の問題点セクション
import { CldImage } from 'astro-cloudinary';
import '../../styles/pages/pl-obj/pl-objIndex.css';

export interface Props {
  title: string;
  subtitle: string;
  problem1Title: string;
  problem1Description: string;
  problem1ImageSrc: any;
  problem1ImageAlt: string;
  problem2Title: string;
  problem2Description: string;
  problem2ImageSrc: any;
  problem2ImageAlt: string;
  problem3Title: string;
  problem3Description: string;
  problem3ImageSrc: any;
  problem3ImageAlt: string;
}

const {
  title,
  subtitle,
  problem1Title,
  problem1Description,
  problem1ImageSrc,
  problem1ImageAlt,
  problem2Title,
  problem2Description,
  problem2ImageSrc,
  problem2ImageAlt,
  problem3Title,
  problem3Description,
  problem3ImageSrc,
  problem3ImageAlt,
} = Astro.props;
---

<section class='language-learning-problems' aria-labelledby='problems-title'>
  <div class='problems-container glassmorphism glassmorphism-card'>
    <h2 class='problems-title' id='problems-title'>{title}</h2>

    <p class='problems-subtitle'>{subtitle}</p>

    <!-- Problem 1 -->
    <ol class='problems-list'>
      <li class='problem-item'>
        <div class='problem-image-container'>
          <CldImage
            src={problem1ImageSrc}
            alt={problem1ImageAlt}
            quality='auto'
            width={135}
            height={135}
            loading='lazy'
            decoding='async'
            class='problem-image'
          />
          <div class='problem-icon-overlay'>
            <svg
              xmlns='http://www.w3.org/2000/svg'
              width='24'
              height='24'
              viewBox='0 0 24 24'
              fill='none'
              stroke='currentColor'
              stroke-width='1.5'
              stroke-linecap='round'
              stroke-linejoin='round'
              class='lucide lucide-ban-icon lucide-ban'
            >
              <path d='M4.929 4.929 19.07 19.071'></path>
              <circle cx='12' cy='12' r='10'></circle>
            </svg>
          </div>
        </div>
        <p class='problem-text'>
          {problem1Title}
          <u>{problem1Description}</u>
        </p>
      </li>

      <!-- Problem 2 -->
      <li class='problem-item'>
        <div class='problem-image-container'>
          <CldImage
            src={problem2ImageSrc}
            alt={problem2ImageAlt}
            quality='auto'
            width={135}
            height={135}
            loading='lazy'
            decoding='async'
            class='problem-image'
          />
          <div class='problem-icon-overlay'>
            <svg
              xmlns='http://www.w3.org/2000/svg'
              width='24'
              height='24'
              viewBox='0 0 24 24'
              fill='none'
              stroke='currentColor'
              stroke-width='1.5'
              stroke-linecap='round'
              stroke-linejoin='round'
              class='lucide lucide-ban-icon lucide-ban'
            >
              <path d='M4.929 4.929 19.07 19.071'></path>
              <circle cx='12' cy='12' r='10'></circle>
            </svg>
          </div>
        </div>
        <p class='problem-text'>
          {problem2Title}
          <u>{problem2Description}</u>
        </p>
      </li>

      <!-- Problem 3 -->
      <li class='problem-item'>
        <div class='problem-image-container'>
          <CldImage
            src={problem3ImageSrc}
            alt={problem3ImageAlt}
            quality='auto'
            width={135}
            height={135}
            loading='lazy'
            decoding='async'
            class='problem-image'
          />
          <div class='problem-icon-overlay'>
            <svg
              xmlns='http://www.w3.org/2000/svg'
              width='24'
              height='24'
              viewBox='0 0 24 24'
              fill='none'
              stroke='currentColor'
              stroke-width='1.5'
              stroke-linecap='round'
              stroke-linejoin='round'
              class='lucide lucide-ban-icon lucide-ban'
            >
              <path d='M4.929 4.929 19.07 19.071'></path>
              <circle cx='12' cy='12' r='10'></circle>
            </svg>
          </div>
        </div>
        <p class='problem-text'>
          {problem3Title}
          <u>{problem3Description}</u>
        </p>
      </li>
    </ol>
  </div>
</section>
