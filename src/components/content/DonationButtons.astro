---
// DonationButtons.astro - Komponen untuk tombol donasi platform

const donationLinks = [
  {
    href: "https://saweria.co/gorakudo",
    logo: "/img/logos/saweria.png",
    name: "Saweria",
    desc: "Platform donasi Indonesia",
  },
  {
    href: "https://trakteer.id/gorakudo",
    logo: "/img/logos/trakteer.png",
    name: "Trakteer",
    desc: "Support creator Indonesia",
  },
  {
    href: "https://ko-fi.com/gorakudo",
    logo: "/img/logos/kofi.png",
    name: "Ko-fi",
    desc: "International support",
  }
];

---

<div class="donation-buttons">
    {donationLinks.map(link => (
        <a href={link.href} target="_blank" rel="noopener noreferrer" class="donation-btn">
        <img src={link.logo} alt={link.name} class="donation-logo">
        <div class="donation-text">
            <span class="platform-name">{link.name}</span>
            <span class="platform-desc">{link.desc}</span>
        </div>
        </a>
    ))}
</div>

<style>
.donation-buttons {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 1rem;
  padding: 1rem 0;
  margin-top: -2rem;
}

.donation-btn {
  position: relative;
  display: flex;
  align-items: center;
  padding: 1rem;
  overflow: hidden;
  text-decoration: none;
  border: 1px solid var(--color-content-border);
  border-radius: 16px;
  box-shadow: 0 4px 20px rgb(0 0 0 / 10%);
  transition: all 0.3s ease;
}

.donation-btn:hover {
  box-shadow: 0 8px 30px rgb(0 0 0 / 15%);
  transform: translateY(-2px);
}

.donation-btn::before {
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  content: '';
  background: linear-gradient(90deg, transparent, rgb(255 255 255 / 20%), transparent);
  transition: left 0.5s;
}

.donation-btn:hover::before {
  left: 100%;
}

.donation-logo {
  flex-shrink: 0;
  width: 48px;
  height: 48px;
  padding: 8px;
  margin-right: 1rem;
  background: oklch(100% 0 160deg);
  border-radius: 8px;
}

.donation-text {
  display: flex;
  flex-direction: column;
}

.platform-name {
  margin-bottom: 0.25rem;
  font-size: 1.25rem;
  font-weight: 600;
  color: oklch(100% 0 160deg)
}

.platform-desc {
  font-size: 0.875rem;
  color: oklch(100% 0 160deg);
  opacity: 0.9
  
}

@media (width <= 768px) {
  .donation-buttons {
    grid-template-columns: 1fr;
    gap: 1rem;
  }
  
  .donation-btn {
    padding: 1rem;
  }
  
  .donation-logo {
    width: 40px;
    height: 40px;
  }
  
  .platform-name {
    font-size: 1.125rem;
  }
}

/* Dark mode support */
@media (prefers-color-scheme: dark) {
  .donation-btn {
    box-shadow: 0 4px 20px rgb(0 0 0 / 30%);
  }
  
  .donation-btn:hover {
    box-shadow: 0 8px 30px rgb(0 0 0 / 40%);
  }
}
</style>
