---
// DonationButtons.astro - Komponen untuk tombol donasi platform

const donationLinks = [
  {
    href: "https://saweria.co/gorakudo",
    logo: "/img/logos/saweria.png",
    name: "Saweria",
    desc: "Platform donasi Indonesia",
  },
  {
    href: "https://trakteer.id/gorakudo",
    logo: "/img/logos/trakteer.png",
    name: "Trakteer",
    desc: "Support creator Indonesia",
  },
  {
    href: "https://ko-fi.com/gorakudo",
    logo: "/img/logos/kofi.png",
    name: "Ko-fi",
    desc: "International support",
  }
];

---

<div class="donation-buttons">
    {donationLinks.map(link => (
        <a href={link.href} target="_blank" rel="noopener noreferrer" class="donation-btn">
        <img src={link.logo} alt={link.name} class="donation-logo">
        <div class="donation-text">
            <span class="platform-name">{link.name}</span>
            <span class="platform-desc">{link.desc}</span>
        </div>
        </a>
    ))}
</div>

<style>
.donation-buttons {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 1rem;
  margin-top: -2rem;
  padding: 1rem 0;
}

.donation-btn {
  display: flex;
  align-items: center;
  padding: 1rem;
  border-radius: 16px;
  text-decoration: none;
  transition: all 0.3s ease;
  border: 1px solid var(--color-content-border);
  position: relative;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
}

.donation-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
}

.donation-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.donation-btn:hover::before {
  left: 100%;
}

.donation-logo {
  width: 48px;
  height: 48px;
  margin-right: 1rem;
  border-radius: 8px;
  background: oklch(1 0 160);
  padding: 8px;
  flex-shrink: 0;
}

.donation-text {
  display: flex;
  flex-direction: column;
}

.platform-name {
  font-size: 1.25rem;
  font-weight: 600;
  margin-bottom: 0.25rem;
  color: oklch(1 0 160)
}

.platform-desc {
  font-size: 0.875rem;
  opacity: 0.9;
  color: oklch(1 0 160)
  
}

@media (max-width: 768px) {
  .donation-buttons {
    grid-template-columns: 1fr;
    gap: 1rem;
  }
  
  .donation-btn {
    padding: 1rem;
  }
  
  .donation-logo {
    width: 40px;
    height: 40px;
  }
  
  .platform-name {
    font-size: 1.125rem;
  }
}

/* Dark mode support */
@media (prefers-color-scheme: dark) {
  .donation-btn {
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }
  
  .donation-btn:hover {
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.4);
  }
}
</style>
