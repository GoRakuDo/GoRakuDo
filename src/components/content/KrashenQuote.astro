---
import { Image } from 'astro:assets';
import krashenImage from '../../assets/images/krashen.webp';

export interface Props {
  quote: string;
  author: string;
  imageAlt?: string;
  imageWidth?: number;
  imageHeight?: number;
}

const {
  quote,
  author,
  imageAlt = 'Stephen Krashen',
  imageWidth = 80,
  imageHeight = 80,
} = Astro.props;
---

<article
  class='krashen-quote glassmorphism'
  role='complementary'
  aria-labelledby='quote-author'
>
  <!-- Quote Icon -->
  <div class='quote-icon'>
    <svg viewBox='0 0 24 24' fill='none' xmlns='http://www.w3.org/2000/svg'>
      <path
        d='M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h4v10h-10z'
        fill='currentColor'></path>
    </svg>
  </div>

  <div class='krashen-image'>
    <Image
      src={krashenImage}
      alt={imageAlt}
      width={imageWidth}
      height={imageHeight}
      loading='lazy'
      decoding='async'
    />
  </div>
  <blockquote>
    <p set:html={quote} />
    <cite id='quote-author'>— {author}</cite>
  </blockquote>
</article>

<style is:global>
  /* Krashen Quote Component - Optimized */
  .krashen-quote {
    --quote-gap: var(--space-lg);
    --quote-padding: var(--space-3xl);
    --image-size: 80px;
    --image-size-mobile: 60px;
    --image-size-tablet: 70px;

    position: relative;
    display: flex;
    align-items: flex-start;
    gap: var(--quote-gap);
    margin: var(--space-5xl) 0 0;
    padding: var(--quote-padding);
    border-radius: 12px;
    background: oklch(100% 0 0 / 0.1);
    backdrop-filter: blur(10px);
    box-shadow: 0 8px 32px oklch(0% 0 0 / 0.1);
    transition:
      transform var(--transition-normal),
      box-shadow var(--transition-normal);

    /* Mobile layout */
    @media (max-width: 767px) {
      --quote-gap: var(--space-md);
      --quote-padding: var(--space-xl);
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    /* High contrast mode support */
    @media (prefers-contrast: high) {
      background: oklch(0% 0 0 / 0.8);
      border: 2px solid var(--color-text-primary);
    }

    /* Reduced motion support */
    @media (prefers-reduced-motion: reduce) {
      transition: none;

      .quote-icon {
        transition: none;
      }

      &:hover .quote-icon {
        transform: none;
      }

      p strong {
        transition: none;
      }
    }
  }

  /* Quote Icon Styles */
  .quote-icon {
    position: absolute;
    top: var(--space-lg);
    left: var(--space-lg);
    z-index: 1;
    opacity: 0.3;
    transition: all var(--transition-normal);

    @media (max-width: 767px) {
      top: var(--space-md);
      left: var(--space-md);
    }
  }

  .quote-icon svg {
    width: 32px;
    height: 32px;
    color: oklch(100% 0 0 / 0.4);
    filter: drop-shadow(0 2px 4px oklch(0% 0 0 / 0.2));

    @media (max-width: 767px) {
      width: 24px;
      height: 24px;
    }
  }

  /* Hover effect for quote icon */
  .krashen-quote:hover .quote-icon {
    opacity: 0.6;
    transform: scale(1.1);
    transition: color var(--transition-normal);
  }

  .krashen-quote:hover .quote-icon svg {
    color: var(--token-purple-base);
  }

  .krashen-quote p {
    margin: 0 0 var(--space-lg);
    color: oklch(100% 0 0 / 0.95);
    font-style: italic;
    text-shadow: 0 1px 2px oklch(0% 0 0 / 0.3);
    line-height: 1.6;
    font-size: 1rem; /* 16px */

    /* デスクトップでの位置調整 */
    @media (min-width: 768px) {
      margin-top: 0.5em; /* 画像の中心とテキストの最初の行を揃える */
      font-size: 1.25rem; /* 20px - デスクトップではさらに大きく */
    }
  }

  .krashen-quote p strong {
    color: oklch(100% 0 0 / 1);
    font-weight: var(--font-bold);
    text-shadow: 0 1px 2px oklch(0% 0 0 / 0.4);
    transition: color var(--transition-normal);
  }

  /* ホバー時のstrong要素の色変更 - 確実に動作するように特異性を高める */
  .krashen-quote:hover p strong {
    color: var(--token-purple-base);
  }

  .krashen-image {
    flex-shrink: 0;
    margin-top: 0;
    display: flex;
    align-items: center;

    /* Desktop layout */
    @media (min-width: 768px) {
      padding-left: var(--space-lg);
      align-self: flex-start;
      margin-top: 0.5em; /* テキストの最初の行と画像の中心を揃える */
    }

    /* Mobile layout */
    @media (max-width: 767px) {
      margin-top: 0;
      align-self: center;
    }
  }

  .krashen-quote .krashen-image img {
    width: var(--image-size);
    height: var(--image-size);
    border-radius: 50%;
    object-fit: cover;
    box-shadow: 0 4px 12px oklch(0% 0 0 / 0.2);
    transition: transform var(--transition-normal);
    margin: 0;

    /* Mobile image size */
    @media (max-width: 767px) {
      width: var(--image-size-mobile);
      height: var(--image-size-mobile);
    }

    /* Tablet image size */
    @media (min-width: 768px) {
      width: var(--image-size-tablet);
      height: var(--image-size-tablet);
    }

    /* Reduced motion support */
    @media (prefers-reduced-motion: reduce) {
      transition: none;
    }
  }

  .krashen-quote blockquote {
    border: none !important;
    border-left: none !important;
    border-right: none !important;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    flex: 1;
  }

  .krashen-quote cite {
    display: block;
    color: oklch(100% 0 0 / 0.8);
    font-style: normal;
    text-align: right;
    text-shadow: 0 1px 2px oklch(0% 0 0 / 0.3);
    font-size: 0.9em;
  }
</style>
