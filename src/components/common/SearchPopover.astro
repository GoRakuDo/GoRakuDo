    // „Éá„Éê„ÉÉ„Ç∞Áî®ÔºöÂ§âÊï∞„ÅÆÂÄ§„ÇíÁ¢∫Ë™ç
    console.log(
      'Initial values - toolFilter:',
      toolFilterValue,
      'searchCollections:',
      searchCollectionsValue,
      'Type of searchCollections:',
      typeof searchCollectionsValue
    );

    // ========== FUZZY SEARCH CONFIGURATION ==========
    const fuseOptions = {
      keys: [
        { name: 'searchableText', weight: 0.5 }, // ‰∫ãÂâçÁµêÂêà„ÉÜ„Ç≠„Çπ„ÉàÔºàdocs/„ÉÑ„Éº„É´‰∏°Êñπ„ÅßÊÉ≥ÂÆöÔºâ
        { name: 'title', weight: 0.35 }, // „Çø„Ç§„Éà„É´
