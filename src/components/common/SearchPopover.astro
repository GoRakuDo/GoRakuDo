      0 6px 20px var(--sp-accent-3),
      inset 0 1px 0 var(--sp-white-3);
  }

  .search-icon {
    flex-shrink: 0;
    width: var(--sp-size-lg);
    height: var(--sp-size-lg);
  }

  .search-text {
    color: inherit;
    font-size: var(--sp-text-base);
    font-weight: 500;
    white-space: nowrap;
  }

