    --sp-radius-md: var(--sp-space-md);
    --sp-radius-lg: var(--sp-space-lg);
    --sp-radius-xl: var(--sp-space-xl);
    --sp-radius-2xl: clamp(0.875rem, 2vw, 1.125rem);

