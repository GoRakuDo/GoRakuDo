    transform: translateY(-2px) scale(1.05);
  }

  .search-toggle-btn:hover::before {
    opacity: 1;
  }

  .search-toggle-btn:active {
    transform: translateY(-1px) scale(1.02);
    transition: all 0.1s ease;
  }

  .search-toggle-btn:focus-visible {
