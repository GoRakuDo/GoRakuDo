    --sp-text-base: clamp(0.875rem, 2vw, 1rem); /* 14px-16px */
    --sp-text-lg: clamp(1rem, 2.5vw, 1.125rem); /* 16px-18px */
    --sp-text-xl: clamp(1rem, 2.8vw, 1.125rem); /* 16px-18px */
