      includeScore: true,
      includeMatches: true,
      minMatchCharLength: 2,
      shouldSort: true,
      // Ë®ò‰∫ãÂÜÖÂÆπ„ÅÆÊ§úÁ¥¢Á≤æÂ∫¶Âêë‰∏ä
      findAllMatches: true,
