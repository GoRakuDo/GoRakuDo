    --sp-space-2xl: clamp(1.5rem, 6vw, 1.75rem); /* 24px-28px */
    --sp-space-3xl: clamp(2rem, 7vw, 2.5rem); /* 32px-40px */
    --sp-space-4xl: clamp(2.5rem, 8vw, 3rem); /* 40px-48px */
    --sp-space-5xl: clamp(3rem, 9vw, 3.5rem); /* 48px-56px */
