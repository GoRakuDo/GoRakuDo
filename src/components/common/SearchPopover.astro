    --sp-size-2xl: var(--sp-space-2xl);
    --sp-size-3xl: var(--sp-space-3xl);
    --sp-size-4xl: var(--sp-space-4xl);
    --sp-size-5xl: var(--sp-space-5xl);
    --sp-size-6xl: var(--sp-space-6xl);

    /* ========== BORDER RADIUS SYSTEM ========== */
