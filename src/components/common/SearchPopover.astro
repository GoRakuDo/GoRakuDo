    position: relative;
    top: calc(5% + var(--sp-gap));
    left: 50%;
    z-index: 1000;
    overflow: hidden;
    min-width: clamp(320px, 55vw, 450px);
    max-width: 90vw;
    padding: var(--sp-gap);
    opacity: 0;
    transform: translateX(-50%) translateY(-10px);
    animation: slideIn 0.3s cubic-bezier(0.4, 0, 0.2, 1) forwards;
