        { name: 'tags', weight: 0.15 }, // „Çø„Ç∞
        { name: 'categories', weight: 0.1 }, // „Ç´„ÉÜ„Ç¥„É™ÔºàdocsÔºâ
        { name: 'slug', weight: 0.1 }, // „Çπ„É©„ÉÉ„Ç∞ÔºàdocsÔºâ
