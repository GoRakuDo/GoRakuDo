---
import { Image } from 'astro:assets';
import docsImage from '../../assets/images/flaticon-japan-torii.png';

interface Props {
  title?: string;
  description?: string;
  buttonText?: string;
  imageAlt?: string;
  href?: string;
  dataAction?: string;
}

const {
  title = 'Panduan & Dokumentasi',
  description = 'Akses panduan lengkap, metodologi immersion, dan sumber daya pembelajaran yang telah terbukti efektif.',
  buttonText = 'Lihat Panduan Immersion',
  imageAlt = 'Japanese Torii Gate - Symbol of Learning Journey',
  href = '/panduan-lengkap-otodidak-bahasa-jepang',
  dataAction = 'go-to-posts',
} = Astro.props;
---

<section
  class='docs-preview-section loading'
  transition:name='docs-section'
  data-lazy
>
  <div class='docs-container max-w-6xl mx-auto px-4'>
    <h2
      class='docs-title mb-8 text-center'
      id='docs-title'
      transition:name='docs-title'
    >
      {title}
    </h2>

    <!-- Main Content Frame -->
    <div class='docs-main-frame'>
      <div
        class='docs-content-wrapper flex flex-col lg:flex-row items-center gap-8 lg:gap-12'
      >
        <!-- Image Frame: Mobile First, Desktop Right -->
        <div
          class='docs-right-frame flex-shrink-0 flex items-center justify-center order-1 lg:order-2'
        >
          <div class='docs-image-container relative'>
            <Image
              src={docsImage}
              alt={imageAlt}
              width={240}
              height={240}
              class='w-40 h-40 md:w-48 md:h-48 lg:w-56 lg:h-56 object-contain drop-shadow-lg opacity-80'
              format='webp'
              quality={90}
              loading='lazy'
            />
          </div>
        </div>

        <!-- Left Frame: Text Content -->
        <div
          class='docs-left-frame flex-1 flex flex-col justify-center order-2 lg:order-1'
        >
          <p
            class='docs-description mb-8 text-lg leading-relaxed text-center lg:text-left'
          >
            {description}
          </p>
          <div class='docs-cta flex justify-center lg:justify-start'>
            <a
              href={href}
              class='docs-button inline-flex items-center gap-2 px-6 py-3 rounded-lg font-medium transition-all duration-200 hover:scale-105'
              data-action={dataAction}
              transition:name='docs-button'
            >
              {buttonText}
              <svg
                width='20'
                height='20'
                viewBox='0 0 24 24'
                fill='none'
                stroke='currentColor'
                stroke-width='2'
                stroke-linecap='round'
                stroke-linejoin='round'
                aria-hidden='true'
              >
                <path d='M5 12h14M12 5l7 7-7 7'></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
