        />
      </div>
    </div>

    <!-- Text Wrapper (Mobile: Hidden/Contents, Desktop: Flex Column) -->
    <div
      class='contents lg:flex lg:col-span-7 lg:flex-col gap-6 lg:justify-center w-full'
    >
      <!-- Header (Mobile Order 1, Desktop Top) -->
      <div class='order-1 flex items-start gap-4'>
        <div
          class='shrink-0 p-3 rounded-xl bg-red-500/10 border border-red-500/20 text-red-400 mt-1'
        >
          <svg
            xmlns='http://www.w3.org/2000/svg'
            width='24'
            height='24'
            viewBox='0 0 24 24'
            fill='none'
            stroke='currentColor'
            stroke-width='2'
            stroke-linecap='round'
