---
// ========== ENHANCED TOOLS HEADER SECTION ==========
// ToolsHeaderSection.astro - ツールヘッダーセクションコンポーネント
// Astroネイティブアプローチでモダンなデザインを実装

// ========== INLINE TYPE DEFINITIONS ==========
export interface Tool {
  readonly id: string;
  readonly name: string;
  readonly description: string;
  readonly iconUrl: string;
  readonly color?: string;
  readonly link: string;
  readonly interactiveElements?: {
    hasHoverEffect?: boolean;
    hasClickAction?: boolean;
    animationType?: 'scale' | 'slide' | 'fade';
  };
}

export interface Props {
  tools: Tool[];
}

// ========== CONSTANTS & CONFIGURATION ==========
const STATS_CONFIG = {
  tools: {
    label: 'Tools Terpilih',
    suffix: '+',
  },
  free: {
    label: 'Gratis',
    value: '100%',
  },
  access: {
    label: 'Akses',
    value: '24/7',
  },
} as const;

const TITLE_CONFIG = {
  main: 'Tools & Aplikasi',
  accent: 'Pembelajaran Bahasa Jepang',
} as const;

const DESCRIPTION =
  'Pilih tool yang sesuai dengan tahap pembelajaran dan kebutuhan Anda. Setiap tool telah dipilih berdasarkan efektivitas dan kemudahan penggunaan.';

// ========== UTILITY FUNCTIONS ==========
const getToolsCount = (tools: Tool[]): number => tools.length;

const getStatsData = (toolsCount: number) => [
  {
    number: `${toolsCount}${STATS_CONFIG.tools.suffix}`,
    label: STATS_CONFIG.tools.label,
  },
  {
    number: STATS_CONFIG.free.value,
    label: STATS_CONFIG.free.label,
  },
  {
    number: STATS_CONFIG.access.value,
    label: STATS_CONFIG.access.label,
  },
];

// ========== OPTIMIZED DATA PROCESSING ==========
const { tools } = Astro.props;

// メイン処理 - 一度だけ計算
const toolsCount = getToolsCount(tools);
const statsData = getStatsData(toolsCount);
---

<section
  class='tools-header-section'
  aria-labelledby='tools-header-title'
  role='banner'
  transition:name='tools-header'
  itemscope
  itemtype='https://schema.org/WebPageElement'
>
  <div class='tools-header-container'>
    <!-- Background Elements -->
    <div
      class='tools-header-bg glassmorphism glassmorphism-card'
      aria-hidden='true'
    >
    </div>

    <!-- Main Content -->
    <div class='tools-header-content'>
      <header class='tools-header-main'>
        <h2
          class='tools-header-title'
          id='tools-header-title'
          itemprop='headline'
        >
          <span class='tools-title-main'>{TITLE_CONFIG.main}</span>
          <span class='tools-title-accent'>{TITLE_CONFIG.accent}</span>
        </h2>

        <p class='tools-header-description' itemprop='description'>
          {DESCRIPTION}
        </p>
      </header>

      <!-- Stats Section -->
      <div
        class='tools-header-stats'
        role='region'
        aria-label='Tools statistics'
      >
        {
          statsData.map((stat, index) => (
            <>
              <div
                class='tools-stat-item'
                itemprop='mainEntity'
                itemscope
                itemtype='https://schema.org/QuantitativeValue'
              >
                <span class='tools-stat-number' itemprop='value'>
                  {stat.number}
                </span>
                <span class='tools-stat-label' itemprop='name'>
                  {stat.label}
                </span>
              </div>
              {index < statsData.length - 1 && (
                <div class='tools-stat-divider' aria-hidden='true' />
              )}
            </>
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  /* ========== CSS VARIABLES & DESIGN TOKENS ========== */
  .tools-header-section {
    /* Color Variables */
    --tools-bg-primary: transparent;
    --tools-text-primary: #ffffff;
    --tools-text-secondary: rgba(255, 255, 255, 0.8);
    --tools-text-muted: rgba(255, 255, 255, 0.7);
    --tools-border-subtle: rgba(255, 255, 255, 0.1);
    --tools-border-divider: rgba(255, 255, 255, 0.2);

    /* Spacing Variables */
    --tools-padding-mobile: 4.5rem 0 1rem;
    --tools-padding-tablet: 4rem 0 1rem;
    --tools-padding-desktop: 5rem 0 2rem;
    --tools-container-padding: 0 1rem;
    --tools-content-padding: 1rem 0;

    /* Typography Variables */
    --tools-title-mobile: 2.5rem;
    --tools-title-tablet: 3rem;
    --tools-title-desktop: 3.5rem;
    --tools-title-large: 4rem;
    --tools-accent-mobile: 1.5rem;
    --tools-accent-tablet: 1.75rem;
    --tools-accent-desktop: 2rem;
    --tools-accent-large: 2.25rem;
    --tools-description-mobile: 1.125rem;
    --tools-description-tablet: 1.25rem;
    --tools-stat-number-mobile: 1.5rem;
    --tools-stat-number-tablet: 1.75rem;
    --tools-stat-number-desktop: 2rem;
    --tools-stat-label: 0.875rem;

    /* Layout Variables */
    --tools-container-max-width: 1200px;
    --tools-stats-gap-mobile: 2rem;
    --tools-stats-gap-desktop: 3rem;
    --tools-divider-height: 2rem;

    /* Animation Variables */
    --tools-transition-fast: 0.2s ease;
    --tools-transition-normal: 0.3s ease;

    /* Apply base styles */
    position: relative;
    padding: var(--tools-padding-mobile);
    overflow: hidden;
    background: var(--tools-bg-primary);
  }

  .tools-header-container {
    position: relative;
    max-width: var(--tools-container-max-width);
    margin: 0 auto;
    padding: var(--tools-container-padding);
  }

  /* ========== BACKGROUND ELEMENTS ========== */
  .tools-header-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -1;
    /* GlassMorphism効果はグローバルクラスで適用 */
  }

  /* ========== MOBILE OPTIMIZATIONS ========== */
  @media (max-width: 768px) {
    .tools-header-section {
      padding: var(--tools-padding-mobile);
    }

    .tools-header-container {
      /* 画面端まで拡張 */
      max-width: none;
      margin: 0;
      padding: 0;
    }

    .tools-header-bg {
      /* 上と左右の境界線を完全に削除 */
      border-top: none !important;
      border-left: none !important;
      border-right: none !important;
      /* 下だけに分け目を追加 */
      border-bottom: 1px solid var(--tools-border-subtle) !important;
      /* 背景を最上端まで拡張 */
      top: -4.5rem !important; /* セクションのpadding-top分だけ上に拡張 */
      left: -0.1rem !important;
      right: -0.1rem !important;
      bottom: 0;
      /* 角丸を下だけに適用 */
      border-radius: 0 0 var(--border-radius-card) var(--border-radius-card) !important;
      /* グローバルglassmorphismの境界線を完全に上書き */
      border: none !important;
      border-bottom: 1px solid var(--tools-border-subtle) !important;
      /* より強力な境界線制御 - 上の境界線を完全に除去 */
      box-shadow:
        0 8px 32px rgba(0, 0, 0, 0.1),
        inset 0 -1px 0 var(--tools-border-subtle) !important;
      /* 上の境界線の影も除去 */
      box-shadow:
        0 8px 32px rgba(0, 0, 0, 0.1),
        inset 0 -1px 0 var(--tools-border-subtle),
        inset 0 0 0 transparent !important;
    }

    .tools-header-content {
      /* コンテンツのパディングを調整 - 左右を0に設定 */
      padding: 1rem 0 1.5rem 0 !important;
    }
  }

  /* ========== MAIN CONTENT ========== */
  .tools-header-content {
    position: relative;
    text-align: center;
    z-index: 1;
    padding: var(--tools-content-padding);
  }

  .tools-header-main {
    margin-bottom: 3rem;
  }

  /* ========== TYPOGRAPHY ========== */
  .tools-header-title {
    margin: 0 0 1.5rem;
    font-size: var(--tools-title-mobile);
    font-weight: 700;
    line-height: 1.2;
    color: var(--tools-text-primary);
  }

  .tools-title-main {
    display: block;
    background: linear-gradient(
      135deg,
      var(--tools-text-primary) 0%,
      #e2e8f0 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .tools-title-accent {
    display: block;
    font-size: var(--tools-accent-mobile);
    font-weight: 500;
    margin-top: 0.5rem;
    background: linear-gradient(135deg, #8b5dff 0%, #3b82f6 50%, #10b981 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* ========== DESCRIPTION ========== */
  .tools-header-description {
    max-width: 600px;
    margin: 0 auto;
    font-size: var(--tools-description-mobile);
    line-height: 1.7;
    color: var(--tools-text-secondary);
  }

  /* ========== STATS SECTION ========== */
  .tools-header-stats {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--tools-stats-gap-mobile);
    flex-wrap: wrap;
  }

  .tools-stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
    transition: transform var(--tools-transition-fast);
  }

  .tools-stat-item:hover {
    transform: translateY(-2px);
  }

  .tools-stat-number {
    font-size: var(--tools-stat-number-mobile);
    font-weight: 700;
    color: var(--tools-text-primary);
    line-height: 1;
  }

  .tools-stat-label {
    font-size: var(--tools-stat-label);
    color: var(--tools-text-muted);
    font-weight: 500;
  }

  .tools-stat-divider {
    width: 1px;
    height: var(--tools-divider-height);
    background: var(--tools-border-divider);
  }

  /* ========== RESPONSIVE DESIGN ========== */
  @media (min-width: 640px) {
    .tools-header-section {
      padding: var(--tools-padding-tablet);
    }

    .tools-header-container {
      padding: 0 2rem;
    }

    .tools-header-content {
      padding: 1.25rem 0.75rem;
    }

    .tools-header-title {
      font-size: var(--tools-title-tablet);
    }

    .tools-title-accent {
      font-size: var(--tools-accent-tablet);
    }

    .tools-header-description {
      font-size: var(--tools-description-tablet);
    }

    .tools-stat-number {
      font-size: var(--tools-stat-number-tablet);
    }
  }

  @media (min-width: 768px) {
    .tools-header-section {
      padding: var(--tools-padding-desktop);
    }

    .tools-header-content {
      padding: 1.5rem 1rem;
    }

    .tools-header-title {
      font-size: var(--tools-title-desktop);
    }

    .tools-title-accent {
      font-size: var(--tools-accent-desktop);
    }

    .tools-header-stats {
      gap: var(--tools-stats-gap-desktop);
    }

    .tools-stat-number {
      font-size: var(--tools-stat-number-desktop);
    }
  }

  @media (min-width: 1024px) {
    .tools-header-content {
      padding: 1.75rem 1.25rem;
    }

    .tools-header-title {
      font-size: var(--tools-title-large);
    }

    .tools-title-accent {
      font-size: var(--tools-accent-large);
    }
  }

  @media (min-width: 1280px) {
    .tools-header-content {
      padding: 2rem 1.5rem;
    }
  }

  /* ========== ACCESSIBILITY & PERFORMANCE ========== */
  @media (prefers-contrast: high) {
    .tools-title-main {
      color: var(--tools-text-primary);
      -webkit-text-fill-color: var(--tools-text-primary);
    }

    .tools-title-accent {
      color: #8b5dff;
      -webkit-text-fill-color: #8b5dff;
    }

    .tools-stat-number {
      color: var(--tools-text-primary);
    }

    .tools-stat-label {
      color: var(--tools-text-secondary);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .tools-header-section,
    .tools-stat-item {
      transition: none;
    }

    .tools-stat-item:hover {
      transform: none;
    }
  }

  /* Focus management */
  .tools-header-section:focus-visible {
    outline: 2px solid var(--tools-text-primary);
    outline-offset: 2px;
  }

  /* Print styles */
  @media print {
    .tools-header-bg {
      display: none;
    }

    .tools-header-section {
      background: white;
      color: black;
    }

    .tools-title-main,
    .tools-title-accent {
      color: black;
      -webkit-text-fill-color: black;
    }
  }
</style>

<!-- ========== CLIENT-SIDE OPTIMIZATION ========== -->
<script>
  // パフォーマンス最適化: 統計アニメーション
  function optimizeStatsAnimation() {
    const statsItems = document.querySelectorAll(
      '.tools-stat-item'
    ) as NodeListOf<HTMLElement>;

    if ('IntersectionObserver' in window) {
      const statsObserver = new IntersectionObserver(
        entries => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              const element = entry.target as HTMLElement;
              element.style.opacity = '1';
              element.style.transform = 'translateY(0)';
              statsObserver.unobserve(entry.target);
            }
          });
        },
        {
          threshold: 0.1,
          rootMargin: '0px 0px -50px 0px',
        }
      );

      statsItems.forEach(item => {
        item.style.opacity = '0';
        item.style.transform = 'translateY(20px)';
        item.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
        statsObserver.observe(item);
      });
    }
  }

  // DOM読み込み完了後に実行
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', optimizeStatsAnimation);
  } else {
    optimizeStatsAnimation();
  }
</script>
