---
// ToolsHeaderSection.astro - ツールヘッダーセクションコンポーネント
// Astroネイティブアプローチでモダンなデザインを実装

import type { Tool } from '../../types/tool';

export interface Props {
  tools: Tool[];
}

const { tools } = Astro.props;

// ツール数を自動計算
const toolsCount = tools.length;
---

<section
  class='tools-header-section'
  aria-labelledby='tools-header-title'
  role='banner'
  transition:name='tools-header'
>
  <div class='tools-header-container'>
    <!-- Background Elements -->
    <div class='tools-header-bg glassmorphism glassmorphism-card'></div>

    <!-- Main Content -->
    <div class='tools-header-content'>
      <h2 class='tools-header-title' id='tools-header-title'>
        <span class='tools-title-main'>Tools & Aplikasi</span>
        <span class='tools-title-accent'>Pembelajaran Bahasa Jepang</span>
      </h2>

      <p class='tools-header-description'>
        Pilih tool yang sesuai dengan tahap pembelajaran dan kebutuhan Anda.
        Setiap tool telah dipilih berdasarkan efektivitas dan kemudahan
        penggunaan.
      </p>

      <!-- Stats Section -->
      <div class='tools-header-stats'>
        <div class='tools-stat-item'>
          <span class='tools-stat-number'>{toolsCount}+</span>
          <span class='tools-stat-label'>Tools Terpilih</span>
        </div>
        <div class='tools-stat-divider'></div>
        <div class='tools-stat-item'>
          <span class='tools-stat-number'>100%</span>
          <span class='tools-stat-label'>Gratis</span>
        </div>
        <div class='tools-stat-divider'></div>
        <div class='tools-stat-item'>
          <span class='tools-stat-number'>24/7</span>
          <span class='tools-stat-label'>Akses</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Tools Header Section Styles */
  .tools-header-section {
    position: relative;
    padding: 4.5rem 0 1rem;
    overflow: hidden;
  }

  .tools-header-container {
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  /* Background Elements */
  .tools-header-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -1;
    /* GlassMorphism効果はグローバルクラスで適用 */
  }

  /* Mobile border adjustment - 768px以下で上と左右は境界線なし、下だけに分け目 */
  @media (max-width: 768px) {
    .tools-header-container {
      /* 画面端まで拡張 */
      max-width: none;
      margin: 0;
      padding: 0;
    }

    .tools-header-bg {
      /* 上と左右の境界線を完全に削除 */
      border-top: none !important;
      border-left: none !important;
      border-right: none !important;
      /* 下だけに分け目を追加 */
      border-bottom: 1px solid rgba(255, 255, 255, 0.1) !important;
      /* 背景を最上端まで拡張 */
      top: -4.5rem !important; /* セクションのpadding-top分だけ上に拡張 */
      left: -0.1rem !important;
      right: -0.1rem !important;
      bottom: 0;
      /* 角丸を下だけに適用 */
      border-radius: 0 0 var(--border-radius-card) var(--border-radius-card) !important;
      /* グローバルglassmorphismの境界線を完全に上書き */
      border: none !important;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1) !important;
      /* より強力な境界線制御 - 上の境界線を完全に除去 */
      box-shadow:
        0 8px 32px rgba(0, 0, 0, 0.1),
        inset 0 -1px 0 rgba(255, 255, 255, 0.1) !important;
      /* 上の境界線の影も除去 */
      box-shadow:
        0 8px 32px rgba(0, 0, 0, 0.1),
        inset 0 -1px 0 rgba(255, 255, 255, 0.1),
        inset 0 0 0 transparent !important;
    }

    .tools-header-content {
      /* コンテンツのパディングを調整 - 左右を0に設定 */
      padding: 1rem 0 1.5rem 0 !important;
    }
  }

  /* Main Content */
  .tools-header-content {
    position: relative;
    text-align: center;
    z-index: 1;
    padding: 1rem 0;
  }

  /* デスクトップ用のパディング調整 - メディアクエリの後に配置 */
  @media (min-width: 768px) {
    .tools-header-content {
      padding: 1rem 0;
    }
  }

  /* Title */
  .tools-header-title {
    margin: 0 0 1.5rem;
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    color: #ffffff;
  }

  .tools-title-main {
    display: block;
    background: linear-gradient(135deg, #ffffff 0%, #e2e8f0 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .tools-title-accent {
    display: block;
    font-size: 1.5rem;
    font-weight: 500;
    margin-top: 0.5rem;
    background: linear-gradient(135deg, #8b5dff 0%, #3b82f6 50%, #10b981 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Description */
  .tools-header-description {
    max-width: 600px;
    margin: 0 auto 3rem;
    font-size: 1.125rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.8);
  }

  /* Stats Section */
  .tools-header-stats {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .tools-stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
  }

  .tools-stat-number {
    font-size: 1.5rem;
    font-weight: 700;
    color: #ffffff;
    line-height: 1;
  }

  .tools-stat-label {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.7);
    font-weight: 500;
  }

  .tools-stat-divider {
    width: 1px;
    height: 2rem;
    background: rgba(255, 255, 255, 0.2);
  }

  /* Responsive Design */
  @media (min-width: 640px) {
    .tools-header-section {
      padding: 4rem 0 1rem;
    }

    .tools-header-container {
      padding: 0 2rem;
    }

    .tools-header-content {
      padding: 1.25rem 0.75rem;
    }

    .tools-header-title {
      font-size: 3rem;
    }

    .tools-title-accent {
      font-size: 1.75rem;
    }

    .tools-header-description {
      font-size: 1.25rem;
    }

    .tools-stat-number {
      font-size: 1.75rem;
    }
  }

  @media (min-width: 768px) {
    .tools-header-section {
      padding: 5rem 0 2rem;
    }

    .tools-header-content {
      padding: 1.5rem 1rem;
    }

    .tools-header-title {
      font-size: 3.5rem;
    }

    .tools-title-accent {
      font-size: 2rem;
    }

    .tools-header-stats {
      gap: 3rem;
    }

    .tools-stat-number {
      font-size: 2rem;
    }
  }

  @media (min-width: 1024px) {
    .tools-header-content {
      padding: 1.75rem 1.25rem;
    }

    .tools-header-title {
      font-size: 4rem;
    }

    .tools-title-accent {
      font-size: 2.25rem;
    }
  }

  @media (min-width: 1280px) {
    .tools-header-content {
      padding: 2rem 1.5rem;
    }
  }

  /* High Contrast Mode Support */
  @media (prefers-contrast: high) {
    .tools-title-main {
      color: #ffffff;
      -webkit-text-fill-color: #ffffff;
    }

    .tools-title-accent {
      color: #8b5dff;
      -webkit-text-fill-color: #8b5dff;
    }
  }

  /* Reduced Motion Support */
  @media (prefers-reduced-motion: reduce) {
    .tools-header-section {
      transition: none;
    }
  }
</style>
