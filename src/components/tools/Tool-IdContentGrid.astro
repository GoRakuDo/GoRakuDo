---
// ========== OPTIMIZED CONTENT GRID COMPONENT ==========
// Centralized data management - this component only handles display logic
// All data processing is done in the parent index.astro

import ToolIdArticle from "./Tool-IdArticle.astro";
import toolsData from "../../data/tools.json";

export interface Props {
  hasArticles: boolean;
  toolArticles: any[];
  tool: string;
  formattedToolName: string;
}

const { hasArticles, toolArticles, tool, formattedToolName } = Astro.props;

// Auto-generate suggestions from tools.json (exclude current tool, show all)
const suggestions = toolsData
  .filter(t => t.id !== tool)
  .map(t => ({ name: t.name, iconUrl: t.iconUrl, href: t.link }));

// Optimized constants for better performance
const EMPTY_STATE_CONFIG = {
  title: `Tutorial ${formattedToolName} Sedang Disiapkan`,
  description: `Tutorial tentang ${formattedToolName} sedang dalam tahap penyusunan. Akan segera dipublikasikan, mohon tunggu sebentar.`,
  suggestions,
} as const;
---

<!-- FlexBox Optimized Main Content with Modern Layout -->
<div class="tool-main-content">
  {hasArticles ? (
    <div class="tool__articles-section">
      <!-- FlexBox Optimized Articles Grid -->
      <div class="tool__articles-grid" role="grid" aria-label={`Articles for ${formattedToolName}`}>
        {toolArticles.map((article, index) => (
          <ToolIdArticle 
            article={article} 
            tool={tool} 
            index={index} 
            role="gridcell"
            aria-label={`Article: ${article.title}`}
          />
        ))}
      </div>
    </div>
  ) : (
    <div class="tool__empty-state" role="region" aria-label="No articles available">
      <div class="tool__empty-state-content">
        <div class="tool__empty-state-icon">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
        </div>
        <h2 class="tool__empty-state-title">{EMPTY_STATE_CONFIG.title}</h2>
        <p class="tool__empty-state-description">
          {EMPTY_STATE_CONFIG.description}
        </p>
        <div class="tool__empty-state-actions">
          <a href="/tools" class="tool__empty-state-btn tool__empty-state-btn--primary" aria-label="Browse other available tools">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            <span>Lihat tutorial Lain</span>
          </a>
          <a href="/docs" class="tool__empty-state-btn tool__empty-state-btn--secondary" aria-label="Browse documentation">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
            </svg>
            <span>Lihat Dokumentasi</span>
          </a>
        </div>
        <div class="tool__empty-state-suggestions">
          <h3 class="tool__suggestions-title">Tutotrial lain-nya yang kami Rekomendasikan</h3>
          <div class="tool__suggestions-list" role="list" aria-label="Recommended tools">
            {EMPTY_STATE_CONFIG.suggestions.map((suggestion) => (
              <a href={suggestion.href} class="tool__suggestion-tool" role="listitem" aria-label={`Visit ${suggestion.name} tool page`}>
                <img 
                  src={suggestion.iconUrl} 
                  alt={`${suggestion.name} icon`}
                  class="tool__suggestion-tool-icon"
                  loading="lazy"
                  width="32"
                  height="32"
                />
                <span class="tool__suggestion-tool-name">{suggestion.name}</span>
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
  )}
</div>

