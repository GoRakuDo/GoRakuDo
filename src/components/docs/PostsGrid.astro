---
// PostsGrid Component - Optimized
// ドキュメントページの投稿グリッドを表示するコンポーネント（PostCard統合版）

export interface Props {
  posts: Array<{
    slug: string;
    title: string;
    description: string;
    url?: string;
    publishedDate: string;
    emoji?: string;
    tags?: string[];
    category?: string;
    isRecommended?: boolean;
    isBeginner?: boolean;
    isTool?: boolean;
  }>;
  className?: string;
}

const {
  posts = [],
  className = '',
} = Astro.props;

// 最適化された日付フォーマット関数（メモ化対応）
const dateFormatter = new Intl.DateTimeFormat('id-ID', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

function formatDate(dateString: string): string {
  if (!dateString?.trim()) return 'Invalid Date';
  
  const date = new Date(dateString);
  return isNaN(date.getTime()) ? 'Invalid Date' : dateFormatter.format(date);
}

// カードバリアントの配列（パフォーマンス最適化）
const cardVariants = ['post-card-0', 'post-card-1', 'post-card-2', 'post-card-3'];

// 最適化された投稿データの前処理
const processedPosts = posts.map((post, index) => ({
  ...post,
  cardVariant: cardVariants[index % cardVariants.length],
  displayTags: post.tags?.slice(0, 3) || [],
  remainingTags: Math.max(0, (post.tags?.length || 0) - 3),
  formattedDate: formatDate(post.publishedDate),
  postUrl: post.url || `/docs/${post.slug}`,
}));
---

<div class={`posts-grid ${className}`}>
  {processedPosts.map((post) => (
    <article
      class={`post-card glassmorphism glassmorphism-card ${post.cardVariant}`}
      data-post-slug={post.slug}
      data-content-type={post.category || ''}
      data-is-recommended={post.isRecommended ? 'true' : 'false'}
      data-is-beginner={post.isBeginner ? 'true' : 'false'}
      data-is-tool={post.isTool ? 'true' : 'false'}
    >
      <!-- Emoji Display -->
      {post.emoji && <div class='post-emoji'>{post.emoji}</div>}

      <div class='post-card-container'>
        <!-- Post Header -->
        <header class='post-header'>
          <h2 class='post-title'>
            <a href={post.postUrl} aria-label={`Baca artikel: ${post.title}`}>
              {post.title}
            </a>
          </h2>
          <div class='post-meta'>
            <time class='post-date' datetime={post.publishedDate}>
              {post.formattedDate}
            </time>
          </div>
        </header>

        <!-- Post Description -->
        <p class='post-description'>{post.description}</p>

        <!-- Post Tags -->
        <div class='post-tags' data-all-tags={JSON.stringify(post.tags || [])}>
          {post.displayTags.map((tag: string) => (
            <span class='post-tag'>{tag}</span>
          ))}
          {post.remainingTags > 0 && (
            <span class='post-tag-more' data-count={post.remainingTags}>
              +{post.remainingTags}
            </span>
          )}
        </div>

        <!-- Read More Button -->
        <a href={post.postUrl} class='read-more-btn' aria-label={`Baca selengkapnya: ${post.title}`}>
          Baca Selengkapnya →
        </a>
      </div>
    </article>
  ))}
</div>

<style>
  /* ===== CSS CUSTOM PROPERTIES ===== */
  :root {
    /* Mobile First (320px+) */
    --card-padding: 1rem;
    --grid-gap: 1.25rem;
    --emoji-size: 5.25rem; /* 3.5rem * 1.5 = 5.25rem */
    --title-font: 1.375rem;
    --description-lines: 3;
    --transition-smooth: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    --transition-fast: all 0.2s ease;
    --shadow-subtle: 0 1px 3px oklch(0% 0 0deg / 0.1);
    --shadow-hover: 0 6px 12px oklch(0% 0 0deg / 0.15);
    --color-primary: oklch(60% 0.3 280deg);
    --color-text-dark: oklch(20% 0 0deg);
    --color-text-medium: oklch(30% 0 0deg);
    --color-text-light: oklch(45% 0 0deg);
  }

  /* ===== GRID LAYOUT - MOBILE FIRST ===== */
  .posts-grid {
    display: grid;
    place-items: stretch stretch;
    gap: var(--grid-gap);
    grid-template-columns: 1fr;
    overflow: visible;
    max-width: 1400px;
    margin: 0 0.5rem 3rem;
    opacity: 1;
    transform: translateY(0);
    animation: fadeInUp 0.6s ease-out;
  }

  /* Tablet (768px+) */
  @media (min-width: 768px) {
    :root {
      --card-padding: 1.25rem;
      --grid-gap: 2rem;
      --emoji-size: 4.5rem;
      --title-font: 1.25rem;
      --description-lines: 2;
    }
    
    .posts-grid {
      gap: var(--grid-gap);
      grid-template-columns: repeat(2, 1fr);
      margin: 0 auto 4rem;
    }
  }

  /* Desktop (1280px+) */
  @media (min-width: 1280px) {
    :root {
      --card-padding: 1.5rem;
      --grid-gap: 2.5rem;
      --emoji-size: 5rem;
      --title-font: 1.125rem;
    }
    
    .posts-grid {
      gap: var(--grid-gap);
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* ===== ANIMATIONS ===== */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(1.25rem);
    }

    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes float {
    0%, 100% {
      transform: rotate(20deg) translateY(0);
    }

    50% {
      transform: rotate(20deg) translateY(-4px);
    }
  }

  /* ===== CARD BASE STYLES - MOBILE FIRST ===== */
  .post-card {
    position: relative;
    display: flex;
    flex-direction: column;
    overflow: visible;
    width: 100%;
    height: 100%;
    margin: 0;
    padding: var(--card-padding);
    border-radius: 0.875rem;
    cursor: pointer;
    transform: none;
    transition: var(--transition-smooth);
    will-change: transform, box-shadow;
    box-shadow: 
      0 4px 6px -1px oklch(0% 0 0deg / 0.1),
      0 2px 4px -1px oklch(0% 0 0deg / 0.06);
  }

  /* Tablet (768px+) */
  @media (min-width: 768px) {
    .post-card {
      padding: var(--card-padding);
      border-radius: 1rem;
    }
  }

  /* Desktop (1280px+) */
  @media (min-width: 1280px) {
    .post-card {
      padding: var(--card-padding);
      border-radius: 1.125rem;
    }
  }

  /* ===== CARD VARIANTS (ENHANCED) ===== */
  .post-card-0 {
    border: 1px solid oklch(90% 0.02 85deg / 0.3);
    background: linear-gradient(135deg, 
      oklch(99% 0.01 85deg / 0.95) 0%, 
      oklch(97% 0.02 85deg / 0.9) 50%,
      oklch(95% 0.03 85deg / 0.85) 100%);
  }

  .post-card-1 {
    border: 1px solid oklch(90% 0.02 330deg / 0.3);
    background: linear-gradient(135deg, 
      oklch(98% 0.01 330deg / 0.95) 0%, 
      oklch(96% 0.02 330deg / 0.9) 50%,
      oklch(94% 0.03 330deg / 0.85) 100%);
  }

  .post-card-2 {
    border: 1px solid oklch(90% 0.02 240deg / 0.3);
    background: linear-gradient(135deg, 
      oklch(98% 0.01 240deg / 0.95) 0%, 
      oklch(96% 0.02 240deg / 0.9) 50%,
      oklch(94% 0.03 240deg / 0.85) 100%);
  }

  .post-card-3 {
    border: 1px solid oklch(90% 0.02 120deg / 0.3);
    background: linear-gradient(135deg, 
      oklch(99% 0.01 120deg / 0.95) 0%, 
      oklch(97% 0.02 120deg / 0.9) 50%,
      oklch(95% 0.03 120deg / 0.85) 100%);
  }


  /* ===== HOVER EFFECTS (ENHANCED) ===== */
  .post-card:hover {
    z-index: 10;
    background: linear-gradient(135deg, 
      oklch(100% 0 0deg / 0.98) 0%, 
      oklch(99% 0.01 0deg / 0.95) 100%);
    box-shadow: 
      0 20px 25px -5px oklch(0% 0 0deg / 0.1),
      0 10px 10px -5px oklch(0% 0 0deg / 0.04),
      0 0 0 1px oklch(60% 0.3 280deg / 0.1);
    transform: scale(1.02) translateY(-4px);
    transition: var(--transition-fast);
  }

  /* ===== EMOJI STYLING - MOBILE FIRST ===== */
  .post-emoji {
    position: absolute;
    top: -0.5rem;
    right: -0.5rem;
    z-index: 15;
    font-size: var(--emoji-size);
    opacity: 0.9;
    pointer-events: none;
    transform: rotate(15deg);
    transition: var(--transition-smooth);
    animation: float 4s ease-in-out infinite;
    filter: 
      drop-shadow(0 4px 8px oklch(0% 0 0deg / 0.15))
      drop-shadow(0 2px 4px oklch(0% 0 0deg / 0.1));
  }

  /* Tablet (768px+) */
  @media (min-width: 768px) {
    .post-emoji {
      top: -1rem;
      right: -0.75rem;
      font-size: var(--emoji-size);
    }
  }

  /* Desktop (1280px+) */
  @media (min-width: 1280px) {
    .post-emoji {
      top: -1.25rem;
      right: -1rem;
      font-size: var(--emoji-size);
    }
  }

  .post-card:hover .post-emoji {
    opacity: 1;
    transform: rotate(20deg) scale(1.15);
    filter: 
      drop-shadow(0 8px 16px oklch(0% 0 0deg / 0.25))
      drop-shadow(0 4px 8px oklch(0% 0 0deg / 0.15));
    animation-duration: 2s;
  }

  /* ===== CONTENT CONTAINER - MOBILE FIRST ===== */
  .post-card-container {
    display: flex;
    flex: 1;
    flex-direction: column;
    gap: 0.75rem;
    width: 100%;
    height: 100%;
    padding: 0.25rem;
  }

  .post-header {
    margin-bottom: 0.75rem;
  }

  /* Tablet (768px+) */
  @media (min-width: 768px) {
    .post-card-container {
      gap: 0.625rem;
      padding: 0.125rem;
    }
    
    .post-header {
      margin-bottom: 0.5rem;
    }
  }

  /* Desktop (1280px+) */
  @media (min-width: 1280px) {
    .post-card-container {
      gap: 0.625rem;
      padding: 0.125rem;
    }
  }

  /* ===== TYPOGRAPHY - MOBILE FIRST ===== */
  .post-title {
    position: relative;
    z-index: 5;
    min-height: 4rem;
    margin-bottom: 0.75rem;
    padding-right: 5rem;
    color: var(--color-text-dark);
    font-family: system-ui, -apple-system, Segoe UI, Roboto, Helvetica Neue, Arial, sans-serif;
    font-size: var(--title-font);
    font-weight: 800;
    line-height: 1.4;
    letter-spacing: -0.01em;
    text-shadow: 
      0 2px 4px oklch(0% 0 0deg / 0.1),
      0 1px 2px oklch(0% 0 0deg / 0.05);
    transform: none;
    overflow-wrap: break-word;
  }

  /* Tablet (768px+) */
  @media (min-width: 768px) {
    .post-title {
      min-height: 3.5rem;
      margin-bottom: 1rem;
      padding-right: 3.125rem; /* 2.5rem + 0.625rem = 3.125rem */
      font-size: var(--title-font);
      font-weight: 700;
      overflow-wrap: break-word;
    }
  }

  /* Desktop (1280px+) */
  @media (min-width: 1280px) {
    .post-title {
      min-height: 3.5rem;
      margin-bottom: 1rem;
      padding-right: 3.125rem; /* 2.5rem + 0.625rem = 3.125rem */
      font-size: var(--title-font);
      font-weight: 700;
      overflow-wrap: break-word;
    }
  }

  .post-title a {
    position: relative;
    display: block;
    color: inherit;
    text-decoration: none;
    transition: var(--transition-fast);
  }

  .post-title a::before {
    display: none;
  }

  .post-title a:hover {
    color: var(--color-primary);
    text-shadow: 
      0 3px 6px oklch(0% 0 0deg / 0.2),
      0 1px 3px oklch(0% 0 0deg / 0.1);
    transform: translateY(-2px);
  }

  /* Tablet (768px+) */
  @media (min-width: 768px) {
    .post-title a:hover {
      transform: translateY(-1px);
    }
  }

  .post-title a:hover::before {
    display: none;
  }

  .post-meta {
    position: relative;
    z-index: 5;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-light);
    font-size: 0.9rem;
    font-weight: 600;
  }

  .post-date::before {
    font-size: 0.875rem;
    content: '📅';
  }

  .post-description {
    position: relative;
    z-index: 5;
    display: -webkit-box;
    overflow: hidden;
    height: 4.2rem;
    margin-bottom: 0.75rem;
    color: var(--color-text-medium);
    font-size: 1rem;
    font-weight: 500;
    line-height: 1.4;
    flex-grow: 1;
    -webkit-line-clamp: var(--description-lines);
    -webkit-box-orient: vertical;
  }

  /* Tablet (768px+) */
  @media (min-width: 768px) {
    .post-description {
      max-height: calc(1.4em * var(--description-lines));
      margin-bottom: 0.625rem;
      font-size: 0.95rem;
      line-height: 1.4;
      -webkit-line-clamp: var(--description-lines);
    }
  }

  /* Desktop (1280px+) */
  @media (min-width: 1280px) {
    .post-description {
      max-height: calc(1.4em * var(--description-lines));
      margin-bottom: 0.625rem;
      font-size: 0.95rem;
      line-height: 1.4;
      -webkit-line-clamp: var(--description-lines);
    }
  }

  /* ===== TAGS STYLING - MOBILE FIRST ===== */
  .post-tags {
    position: relative;
    z-index: 5;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: flex-start;
    gap: 0.375rem;
    width: 100%;
    margin-top: auto;
    margin-bottom: 1rem;
    padding: 0 0.25rem;
    box-sizing: border-box;
  }

  /* Tablet (768px+) */
  @media (min-width: 768px) {
    .post-tags {
      gap: 0.5rem;
      margin-bottom: 0.875rem;
      padding: 0 0.5rem;
    }
  }

  .post-tag,
  .post-tag-more {
    position: relative;
    overflow: hidden;
    min-width: fit-content;
    padding: 0.375rem 0.75rem;
    border: 1px solid var(--color-primary);
    border-radius: 0.875rem;
    color: var(--color-primary);
    font-size: 0.75rem;
    font-weight: 600;
    white-space: nowrap;
    transition: var(--transition-smooth);
    box-shadow: 
      0 2px 4px oklch(0% 0 0deg / 0.1),
      0 1px 2px oklch(0% 0 0deg / 0.05);
    flex-shrink: 0;
  }

  /* Tablet (768px+) */
  @media (min-width: 768px) {
    .post-tag,
    .post-tag-more {
      padding: 0.5rem 0.875rem;
      font-size: 0.8rem;
      font-weight: 700;
    }
  }

  .post-tag {
    background: linear-gradient(135deg, 
      oklch(60% 0.3 280deg / 0.25) 0%, 
      oklch(60% 0.3 280deg / 0.15) 100%);
    border-color: oklch(60% 0.3 280deg / 0.4);
  }

  .post-tag-more {
    background: linear-gradient(135deg, 
      oklch(60% 0.3 280deg / 0.2) 0%, 
      oklch(60% 0.3 280deg / 0.1) 100%);
    border-color: oklch(60% 0.3 280deg / 0.3);
    cursor: pointer;
  }

  .post-tag::before,
  .post-tag-more::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, 
      transparent, 
      oklch(100% 0 0deg / 0.2), 
      transparent);
    transition: left 0.5s ease;
  }

  .post-tag:hover,
  .post-tag-more:hover {
    background: linear-gradient(135deg, 
      oklch(60% 0.3 280deg / 0.35) 0%, 
      oklch(60% 0.3 280deg / 0.25) 100%);
    border-color: oklch(60% 0.3 280deg / 0.6);
    transform: translateY(-3px) scale(1.08);
    box-shadow: 
      0 8px 16px oklch(0% 0 0deg / 0.15),
      0 4px 8px oklch(0% 0 0deg / 0.1);
  }

  .post-tag:hover::before,
  .post-tag-more:hover::before {
    left: 100%;
  }

  /* ===== READ MORE BUTTON (ENHANCED) ===== */
  .read-more-btn {
    position: relative;
    z-index: 5;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    width: 100%;
    padding: 0.875rem 1.5rem;
    border: 2px solid oklch(60% 0.3 280deg / 0.4);
    border-radius: 1.25rem;
    background: linear-gradient(135deg, 
      oklch(60% 0.3 280deg / 0.15) 0%, 
      oklch(60% 0.3 280deg / 0.08) 100%);
    color: var(--color-primary);
    font-size: 0.9rem;
    font-weight: 600;
    text-decoration: none;
    transform: none;
    transition: var(--transition-smooth);
    box-shadow: 
      0 4px 8px oklch(0% 0 0deg / 0.1),
      0 2px 4px oklch(0% 0 0deg / 0.05);
  }

  /* Tablet (768px+) */
  @media (min-width: 768px) {
    .read-more-btn {
      border-radius: 0.75rem;
      font-weight: 500;
    }
  }

  .read-more-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, 
      transparent, 
      oklch(100% 0 0deg / 0.3), 
      transparent);
    transition: left 0.6s ease;
  }

  .read-more-btn:hover {
    border-color: oklch(60% 0.3 280deg / 0.7);
    background: linear-gradient(135deg, 
      oklch(60% 0.3 280deg / 0.25) 0%, 
      oklch(60% 0.3 280deg / 0.18) 100%);
    color: oklch(55% 0.3 280deg);
    transform: translateY(-3px) scale(1.02);
    box-shadow: 
      0 12px 24px oklch(0% 0 0deg / 0.15),
      0 6px 12px oklch(0% 0 0deg / 0.1);
  }

  /* Tablet (768px+) */
  @media (min-width: 768px) {
    .read-more-btn:hover {
      transform: translateY(-2px) scale(1.01);
    }
  }

  .read-more-btn:hover::before {
    left: 100%;
  }

  /* ===== UTILITY STATES ===== */
  .posts-grid.loading {
    opacity: 0.6;
    pointer-events: none;
  }

  .posts-grid.empty {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 200px;
    text-align: center;
  }
</style>
