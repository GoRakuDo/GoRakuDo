      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* Progressive Loading Animation */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(1.25rem);
    }

    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

