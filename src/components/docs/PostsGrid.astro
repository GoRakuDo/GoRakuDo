    pointer-events: none;
    content: '';
  }

  .post-card-2 {
    position: relative;
    background: linear-gradient(135deg, 
      oklch(97% 0.02 240deg) 0%, 
      oklch(95% 0.03 240deg) 100%);
  }

  .post-card-2::before {
    position: absolute;
    inset: 0;
    border-radius: 1.5rem;
    background-image: 
      radial-gradient(circle at 25% 25%, oklch(100% 0 0deg / 0.8) 1px, transparent 1px),
      radial-gradient(circle at 75% 75%, oklch(100% 0 0deg / 0.6) 1px, transparent 1px),
      radial-gradient(circle at 50% 10%, oklch(100% 0 0deg / 0.7) 1px, transparent 1px);
    background-size: 24px 24px, 20px 20px, 26px 26px;
    pointer-events: none;
    content: '';
  }

  .post-card-3 {
    position: relative;
    background: linear-gradient(135deg, 
      oklch(98% 0.02 120deg) 0%, 
      oklch(96% 0.03 120deg) 100%);
  }

  .post-card-3::before {
    position: absolute;
    inset: 0;
    border-radius: 1.5rem;
    background-image: 
      radial-gradient(circle at 15% 40%, oklch(100% 0 0deg / 0.8) 1px, transparent 1px),
      radial-gradient(circle at 85% 20%, oklch(100% 0 0deg / 0.6) 1px, transparent 1px),
      radial-gradient(circle at 45% 85%, oklch(100% 0 0deg / 0.7) 1px, transparent 1px);
    background-size: 22px 22px, 19px 19px, 25px 25px;
    pointer-events: none;
    content: '';
  }

  /* Mobile: Increased padding for better touch interaction */
  @media (min-width: 320px) and (max-width: 768px) {
    .post-card {
      padding: 1rem;
    }
    
    .post-card .post-title {
      padding-right: 3rem; /* Add right padding for mobile */
      font-size: 1.3rem; /* larger font size for mobile - override clamp with higher specificity */
    }
  }

  /* Enhanced rotation patterns for authentic sticky note feel - Desktop only */
  @media (min-width: 768px) {
    .post-card:nth-child(even) {
      transform: rotate(1.5deg);
    }

    .post-card:nth-child(3n) {
      transform: rotate(-2.5deg);
    }

    .post-card:nth-child(4n) {
      transform: rotate(0.8deg);
    }

    .post-card:nth-child(5n) {
      transform: rotate(-1.2deg);
    }
    
    /* Tablet and Desktop: Larger emoji and title padding */
    .post-card .post-emoji {
      top: -1.25rem; /* Move emoji higher up */
      right: -1rem; /* Move emoji more to the right */
      font-size: 4.5rem; /* larger - override clamp with higher specificity */
    }
    
    .post-card .post-title {
      padding-right: 3rem; /* Same as mobile for consistency */
    }
  }

  /* Hardware-accelerated hover effects - Optimized */
  .post-card:hover {
    z-index: 10;
    background: oklch(100% 0 0deg);
    box-shadow: var(--shadow-hover);
    transform: rotate(0deg) var(--hover-lift-small) scale(1.01);
    transition:
      box-shadow var(--animate-duration-normal) ease,
      transform var(--animate-duration-fast) ease;
  }

  /* Emoji positioning - top-right corner with enhanced styling */
  .post-emoji {
    position: absolute;
    top: clamp(-0.25rem, -0.5vw, -0.5rem); /* Responsive top position - 1.5x smaller */
    right: clamp(-0.25rem, -0.5vw, -0.5rem); /* Responsive right position - 1.5x smaller */
    z-index: 15;
    font-size: clamp(3.5rem, 3vw, 2.5rem); /* Responsive font size - 0.25x larger on mobile */
    pointer-events: none;
    filter: 
      drop-shadow(0 2px 4px oklch(0% 0 0deg / 0.1))
      drop-shadow(0 1px 2px oklch(0% 0 0deg / 0.05));
    transform: rotate(20deg);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    animation: float 3s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% {
      transform: rotate(20deg) translateY(0);
    }

    50% {
      transform: rotate(20deg) translateY(-4px);
    }
  }

  .post-card:hover .post-emoji {
    transform: rotate(25deg) scale(1.1);
    filter: 
      drop-shadow(0 6px 12px oklch(0% 0 0deg / 0.2))
      drop-shadow(0 3px 6px oklch(0% 0 0deg / 0.15));
  }

  /* Content Container - Adaptive Layout */
  .post-card-container {
    display: flex;
    flex-direction: column;
    gap: clamp(0.5rem, 1.5vw, 1rem);
    width: 100%;
    height: 100%;
    min-height: 240px;
  }

  /* Header section */
  .post-header {
    margin-bottom: 1rem;
  }

  .post-title {
    position: relative;
    z-index: 5;
    min-height: clamp(1.5rem, 2vw, 2rem); /* Responsive min-height - 1.5x smaller */
    margin-bottom: 1rem; /* Smaller margin */
    color: oklch(20% 0 0deg); /* darker gray for better contrast */
    font-family: Gochi Hand, Kalam, Caveat, cursive, system-ui;
    font-size: clamp(1rem, 1.5vw, 1.25em); /* Responsive font size - 1.5x smaller */
    font-weight: 700;
    line-height: 1.3;
    letter-spacing: -0.02em;
    text-shadow: 0 1px 2px oklch(0% 0 0deg / 0.1);
  }

  .post-title a {
    color: inherit;
    text-decoration: none;
    transition: var(--transition-fast);
  }

  .post-title a:hover {
    color: oklch(55% 0.3 280deg); /* purple-700 equivalent */
    text-shadow: 0 2px 4px oklch(0% 0 0deg / 0.15);
    transform: translateY(-1px);
  }

  .post-meta {
    position: relative;
    z-index: 5;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    gap: 0.5rem;
    color: oklch(45% 0 0deg); /* darker gray for better readability */
    font-size: 0.9rem;
    font-weight: 600;
  }

  .post-date::before {
    font-size: 0.875rem;
    content: '📅';
  }

  /* Description with improved responsive text handling - Optimized */
  .post-description {
    position: relative;
    z-index: 5;
    display: -webkit-box;
    overflow: hidden;
    max-height: calc(1.4em * clamp(2, 3vw, 4)); /* Responsive max-height - 1.5x smaller */
    margin-bottom: 0.75rem; /* Smaller margin */
    color: oklch(30% 0 0deg); /* darker gray for better readability */
    font-size: clamp(0.8rem, 1.2vw, 0.9rem); /* Responsive font size - 1.5x smaller */
    font-weight: 500;
    line-height: 1.4; /* Tighter line height */
    flex-grow: 1;
    -webkit-line-clamp: clamp(2, 3, 4); /* Responsive line clamp - 1.5x smaller */
    -webkit-box-orient: vertical;
  }

  /* Tags section */
  .post-tags {
    position: relative;
    z-index: 5;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem;
    margin-top: auto;
    margin-bottom: 1.25rem;
  }

  .post-tag {
    padding: 0.375rem 0.75rem;
    border: 1px solid oklch(60% 0.3 280deg / 0.4);
    border-radius: 0.75rem;
    background: oklch(60% 0.3 280deg / 0.2);
    color: oklch(60% 0.3 280deg);
    font-size: 0.8rem;
    font-weight: 700;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 1px 3px oklch(0% 0 0deg / 0.1);
  }

  .post-tag:hover {
    background: oklch(60% 0.3 280deg / 0.3);
    border-color: oklch(60% 0.3 280deg / 0.6);
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 4px 8px oklch(0% 0 0deg / 0.15);
  }

  .post-tag-more {
    padding: 0.375rem 0.75rem;
    border: 1px solid oklch(60% 0.3 280deg / 0.3);
    border-radius: 0.75rem;
    background: oklch(60% 0.3 280deg / 0.15);
    color: oklch(60% 0.3 280deg);
    font-size: 0.8rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 1px 3px oklch(0% 0 0deg / 0.1);
  }

  .post-tag-more:hover {
    background: oklch(60% 0.3 280deg / 0.25);
    border-color: oklch(60% 0.3 280deg / 0.5);
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 4px 8px oklch(0% 0 0deg / 0.15);
  }

  /* Read More Button - Enhanced Design */
  .read-more-btn {
    position: relative;
    z-index: 5;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    padding: 0.75rem 1.5rem;
    border: 2px solid oklch(60% 0.3 280deg / 0.3);
    border-radius: 1rem;
    background: linear-gradient(135deg, 
      oklch(60% 0.3 280deg / 0.1) 0%, 
      oklch(60% 0.3 280deg / 0.05) 100%);
    color: oklch(60% 0.3 280deg);
    font-size: 0.9rem;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 2px 4px oklch(0% 0 0deg / 0.1);
  }

  .read-more-btn:hover {
    border-color: oklch(60% 0.3 280deg / 0.6);
    background: linear-gradient(135deg, 
      oklch(60% 0.3 280deg / 0.2) 0%, 
      oklch(60% 0.3 280deg / 0.15) 100%);
    color: oklch(55% 0.3 280deg);
    transform: translateY(-2px);
    box-shadow: 0 6px 12px oklch(0% 0 0deg / 0.15);
  }


  /* Responsive Grid Layout - Clamp-based approach */

  /* All responsive styles are now handled with clamp() functions above */


  /* Loading State */
  .posts-grid.loading {
    opacity: 0.6;
    pointer-events: none;
  }

  /* Empty State */
  .posts-grid.empty {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 200px;
    text-align: center;
  }
</style>
