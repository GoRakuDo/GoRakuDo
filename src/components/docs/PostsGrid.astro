    min-height: clamp(160px, 15vh, 200px); /* Responsive min-height - 1.5x smaller */
    margin: 0 auto;
    padding: clamp(0.75rem, 1vw, 1rem); /* Responsive padding - 1.5x smaller */
    border: 1px solid oklch(0% 0 0deg / 0.08);
    border-radius: 1rem; /* Smaller border radius */
