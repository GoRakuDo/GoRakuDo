---
// PostsHeader Component
// ドキュメントページのヘッダーセクションを表示するコンポーネント

export interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<div class='posts-header glassmorphism glassmorphism-card'>
  <h1>{title}</h1>
  <p>{description}</p>
</div>

<style>
  .posts-header {
    overflow-x: hidden;
    max-width: 100%;
    margin: 0 clamp(0.75rem, 2vw, 1rem) clamp(2.5rem, 5vw, 4rem);
    padding: clamp(2rem, 4vw, 2.5rem) clamp(1.25rem, 3vw, 2rem);
    text-align: center;
  }

  /* タブレットとデスクトップでマージンを半分に減らす */
  @media (min-width: 768px) {
    .posts-header {
      margin-bottom: clamp(1.25rem, 2.5vw, 2rem);
    }
  }

  .posts-header h1 {
    margin-bottom: 1.25rem;
    background: linear-gradient(
      135deg,
      var(--clr-text-primary, oklch(100% 0 0deg)) 0%,
      var(--clr-text-secondary, oklch(80% 0 0deg)) 100%
    );
    color: oklch(100% 0 0deg);
    font-size: clamp(1.875rem, 4vw, 3.75rem);
    font-weight: 600;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    overflow-wrap: break-word;
  }

  .posts-header p {
    max-width: 56rem;
    margin: 0 auto;
    color: oklch(82% 0.01 270deg);
    font-size: clamp(1rem, 2.5vw, 1.125rem);
    line-height: 1.75;
    overflow-wrap: break-word;
  }

  /* レスポンシブデザインはclamp()で最適化済み */
</style>
