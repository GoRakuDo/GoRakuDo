{
  "seoOptimization": {
    "titleTemplate": "{{articleTitle}} | GoRakuDo",
    "descriptionTemplate": "{{articleDescription}}",
    "baseKeywords": [
      "GoRakuDo",
      "Pembelajaran Bahasa Jepang",
      "Tutorial Bahasa Jepang",
      "Tutorial Aplikasi Bahasa Jepang"
    ]
  },
  "structuredData": {
    "softwareApplication": {
      "@context": "https://schema.org",
      "@type": "SoftwareApplication",
      "name": "{{toolName}}",
      "description": "{{toolDescription}}",
      "url": "{{toolUrl}}",
      "applicationCategory": "EducationalApplication",
      "operatingSystem": "{{operatingSystem}}",
      "author": {
        "@type": "Organization",
        "name": "{{toolAuthor}}"
      },
      "publisher": {
        "@type": "Organization",
        "name": "GoRakuDo"
      }
    },
    "breadcrumb": {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Beranda",
          "item": "https://gorakudo.org"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Tools",
          "item": "https://gorakudo.org/tools"
        },
        {
          "@type": "ListItem",
          "position": 3,
          "name": "{{toolName}}",
          "item": "https://gorakudo.org/tools/{{toolSlug}}"
        },
        {
          "@type": "ListItem",
          "position": 4,
          "name": "{{articleTitle}}",
          "item": "{{articleUrl}}"
        }
      ]
    }
  },
  "toolData": {
    "anki": {
      "description": "Aplikasi flashcard menggunakan Spaced Repetition System (SRS)",
      "operatingSystem": "Windows, macOS, Linux, iOS, Android",
      "author": "Anki Team"
    },
    "yomichan": {
      "description": "Tools kamus bahasa Jepang yang berjalan sebagai ekstensi browser",
      "operatingSystem": "Chrome, Firefox, Edge",
      "author": "Yomichan Team"
    },
    "migaku": {
      "description": "Tools untuk mengekstrak materi pembelajaran dari konten video",
      "operatingSystem": "Windows, macOS",
      "author": "Migaku Team"
    },
    "language-reactor": {
      "description": "Tools untuk mendukung pembelajaran subtitle di Netflix dan YouTube",
      "operatingSystem": "Chrome, Firefox",
      "author": "Language Reactor Team"
    }
  }
}
