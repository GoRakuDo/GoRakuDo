// This page exists solely to redirect traffic to the new URL, unless on localhost for debugging.
---

<!doctype html>
<html lang='id'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Redirecting...</title>
    <meta name='robots' content='noindex, nofollow' />
  </head>
  <body
    class='bg-[#0c080c] text-white flex items-center justify-center min-h-screen font-sans'
  >
    <div
      class='max-w-md p-8 bg-[#18181b] border border-white/10 rounded-2xl shadow-2xl text-center'
    >
      <h1 class='text-2xl font-bold mb-4 text-purple-400'>Page Redirect</h1>
      <p id='message' class='text-gray-400 mb-6'>Checking environment...</p>

      <div
        id='debug-info'
        class='hidden text-xs text-left bg-black/30 p-4 rounded border border-white/5 font-mono text-gray-500 overflow-x-auto'
      >
        <p>Hostname: <span id='hostname'>...</span></p>
        <p>Target: /panduan-immersion-belajar-bahasa-jepang-dengan-otodidak/</p>
      </div>
    </div>

    <script is:inline>
      (function () {
        const hostname = window.location.hostname;
        const isLocal = ['localhost', '127.0.0.1'].includes(hostname);
        const targetUrl =
          '/panduan-immersion-belajar-bahasa-jepang-dengan-otodidak/';

        const msg = document.getElementById('message');
        const debug = document.getElementById('debug-info');
        document.getElementById('hostname').textContent = hostname;

        if (isLocal) {
          msg.innerHTML = `
            <span class="block text-green-400 font-bold mb-2">Development Mode Detected</span>
            You are viewing this page because you are on <code>${hostname}</code>.
            <br/><br/>
            In production, visitors are redirected to <a href="${targetUrl}" class="text-purple-400 hover:underline">the new Guide URL</a>.
          `;
          debug.classList.remove('hidden');
        } else {
          msg.textContent = 'Redirecting to new guide location...';
          // Perform Redirect
          window.location.replace(targetUrl);
        }
      })();
    </script>
  </body>
</html>
