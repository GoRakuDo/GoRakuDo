---
import HeadSEO from "../components/public-components/HeadSEO.astro";

// SEO data for settings page
const seoData = {
  title: "Pengaturan Sistem - GoRakuDo",
  description: "Pengaturan sistem dan preferensi pengguna untuk GoRakuDo",
  canonicalUrl: "https://gorakudo.org/settings",
  pageType: "website" as const,
  authorName: "Tim GoRakuDo",
};

// Settings configuration
const settingsConfig = {
  theme: {
    auto: "Otomatis (Deteksi Browser)",
    light: "Mode Terang",
    dark: "Mode Gelap",
  },
  language: {
    auto: "Otomatis (Deteksi Browser)",
    id: "Bahasa Indonesia",
    ja: "Êó•Êú¨Ë™û",
  },
  performance: {
    high: "Performa Tinggi",
    balanced: "Seimbang",
    battery: "Hemat Baterai",
  },
  accessibility: {
    normal: "Normal",
    high: "Aksesibilitas Tinggi",
    reduced: "Mengurangi Animasi",
  },
};
---

<!doctype html>
<html lang="id">
  <head>
    <HeadSEO {...seoData} />
    <link rel="stylesheet" href="/css/post-styles.css" />
    <style>
      .settings-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 40px 20px;
      }

      .settings-section {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(139, 93, 255, 0.1);
        border-radius: 20px;
        padding: 30px;
        margin-bottom: 30px;
      }

      .settings-title {
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 20px;
        color: var(--color-text-primary);
      }

      .setting-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 0;
        border-bottom: 1px solid rgba(139, 93, 255, 0.1);
      }

      .setting-item:last-child {
        border-bottom: none;
      }

      .setting-label {
        font-weight: 500;
        color: var(--color-text-primary);
      }

      .setting-control {
        min-width: 200px;
      }

      select,
      input[type="range"] {
        background: rgba(139, 93, 255, 0.1);
        border: 1px solid rgba(139, 93, 255, 0.3);
        border-radius: 8px;
        padding: 8px 12px;
        color: var(--color-text-primary);
        font-size: 14px;
      }

      .save-button {
        background: linear-gradient(135deg, #8b5dff 0%, #7b4def 100%);
        color: white;
        border: none;
        padding: 12px 24px;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
      }

      .save-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(139, 93, 255, 0.3);
      }

      .status-message {
        padding: 10px;
        border-radius: 8px;
        margin-top: 20px;
        text-align: center;
        font-weight: 500;
      }

      .status-success {
        background: rgba(34, 197, 94, 0.1);
        border: 1px solid rgba(34, 197, 94, 0.3);
        color: #22c55e;
      }

      .status-error {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.3);
        color: #ef4444;
      }
    </style>
  </head>
  <body>
    <div class="settings-container">
      <h1 class="settings-title">‚öôÔ∏è Pengaturan Sistem</h1>

      <form id="settingsForm">
        <!-- Theme Settings -->
        <div class="settings-section">
          <h2 class="settings-title">üé® Tema & Tampilan</h2>

          <div class="setting-item">
            <label class="setting-label">Mode Tema</label>
            <div class="setting-control">
              <select id="themeMode" name="themeMode">
                <option value="auto">Otomatis (Deteksi Browser)</option>
                <option value="light">Mode Terang</option>
                <option value="dark">Mode Gelap</option>
              </select>
            </div>
          </div>

          <div class="setting-item">
            <label class="setting-label">Ukuran Font</label>
            <div class="setting-control">
              <input
                type="range"
                id="fontSize"
                name="fontSize"
                min="12"
                max="20"
                value="16"
              />
              <span id="fontSizeValue">16px</span>
            </div>
          </div>
        </div>

        <!-- Language Settings -->
        <div class="settings-section">
          <h2 class="settings-title">üåê Bahasa & Lokalisasi</h2>

          <div class="setting-item">
            <label class="setting-label">Bahasa Interface</label>
            <div class="setting-control">
              <select id="language" name="language">
                <option value="auto">Otomatis (Deteksi Browser)</option>
                <option value="id">Bahasa Indonesia</option>
                <option value="ja">Êó•Êú¨Ë™û</option>
              </select>
            </div>
          </div>
        </div>

        <!-- Performance Settings -->
        <div class="settings-section">
          <h2 class="settings-title">‚ö° Performa & Optimasi</h2>

          <div class="setting-item">
            <label class="setting-label">Mode Performa</label>
            <div class="setting-control">
              <select id="performance" name="performance">
                <option value="balanced">Seimbang</option>
                <option value="high">Performa Tinggi</option>
                <option value="battery">Hemat Baterai</option>
              </select>
            </div>
          </div>

          <div class="setting-item">
            <label class="setting-label">Animasi</label>
            <div class="setting-control">
              <select id="animations" name="animations">
                <option value="normal">Normal</option>
                <option value="reduced">Mengurangi Animasi</option>
                <option value="disabled">Nonaktifkan</option>
              </select>
            </div>
          </div>
        </div>

        <!-- Accessibility Settings -->
        <div class="settings-section">
          <h2 class="settings-title">‚ôø Aksesibilitas</h2>

          <div class="setting-item">
            <label class="setting-label">Kontras Tinggi</label>
            <div class="setting-control">
              <input type="checkbox" id="highContrast" name="highContrast" />
            </div>
          </div>

          <div class="setting-item">
            <label class="setting-label">Fokus yang Lebih Jelas</label>
            <div class="setting-control">
              <input
                type="checkbox"
                id="focusIndicator"
                name="focusIndicator"
              />
            </div>
          </div>
        </div>

        <button type="submit" class="save-button">üíæ Simpan Pengaturan</button>
      </form>

      <div id="statusMessage" class="status-message" style="display: none;">
      </div>
    </div>

    <script src="/scripts/ui/settings-manager.js" is:inline></script>
  </body>
</html>
