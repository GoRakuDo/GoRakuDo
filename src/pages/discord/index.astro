        font-size: 1.1rem;
        line-height: 1.8;
      }

      .content p {
        margin-bottom: 1.2em;
      }

      .content strong {
        color: oklch(20% 0 0deg);
      }

      .member-list {
        margin: 25px 0;
        padding-left: 0;
        list-style: none;
      }

      .member-list li {
        margin-bottom: 10px;
        font-family:
          'Noto Sans JP', 'Hiragino Sans', 'Yu Gothic', 'Meiryo', sans-serif;
      }

      .final-pitch {
        margin-top: 30px;
        color: oklch(20% 0 0deg);
        font-size: 1.15rem;
        font-weight: 600;
        text-align: center;
      }

      .discord-link {
        display: block;
        margin-top: 20px;
        margin-bottom: 40px;
        padding: 20px;
        border: 1px solid oklch(92% 0 0deg);
        border-radius: 8px;
        background-color: oklch(98% 0 0deg);
        color: oklch(20% 0 0deg);
        text-decoration: none;
        cursor: pointer;
        transition: all 0.3s ease;
      }

      .discord-link:hover {
        border-color: oklch(65% 0.25 280deg);
        box-shadow: 0 5px 15px oklch(65% 0.25 280deg / 0.2);
      }

      .discord-header {
        margin-bottom: 8px;
        color: oklch(40% 0 0deg);
        font-family:
          'Noto Sans JP', 'Hiragino Sans', 'Yu Gothic', 'Meiryo', sans-serif;
        font-size: 0.9rem;
        font-weight: 600;
      }

      .discord-url {
        color: oklch(65% 0.25 280deg);
        font-family:
          'Noto Sans JP', 'Hiragino Sans', 'Yu Gothic', 'Meiryo', sans-serif;
        font-size: 1.1rem;
        font-weight: 600;
        overflow-wrap: break-word;
      }

      .arrow {
        display: inline-block;
        font-weight: bold;
        transition: transform 0.2s ease;
      }

      .discord-link:hover .arrow {
        transform: translateX(5px);
      }

      .signature {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        margin-top: 20px;
      }

      .logo {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 80px;
        height: 80px;
        border-radius: 12px;
        background: linear-gradient(
          135deg,
          oklch(65% 0.25 280deg) 0%,
          oklch(60% 0.25 280deg) 100%
        );
        color: white;
        font-size: 32px;
        font-weight: bold;
        flex-shrink: 0;
      }

      .logo-stamp {
        flex-shrink: 0;
        width: 80px;
        height: 80px;
        opacity: 0.85; /* Memberi efek stempel */
      }

      .signature-text {
        text-align: right;
      }

      .signature-title {
