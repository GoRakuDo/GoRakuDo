        text-align: right;
      }

      /* Floating animation for background elements */
      .floating-particle {
        position: fixed;
        z-index: var(--z-index-floating-particle);
        opacity: 0.15;
        pointer-events: none;
      }

      @keyframes float {
        0%,
        100% {
          transform: translateY(0) rotate(0deg);
        }

        50% {
          transform: translateY(-20px) rotate(180deg);
        }
      }

      /* Responsive design */
      @media (max-width: 768px) {
        .invitation-container {
          padding: 40px 25px;
        }

        .japanese-title {
          font-size: 3.2rem;
        }

        .content {
          font-size: 1rem;
        }

        .signature-name {
          font-size: 1.6rem;
        }
      }

      @media (max-width: 480px) {
        .signature {
          flex-direction: column;
          align-items: center;
          gap: 20px;
        }

        .signature-text {
          text-align: center;
        }
      }
    </style>
