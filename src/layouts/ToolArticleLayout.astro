---
// ToolArticleLayout.astro - Optimized Astro-native article layout
// Architect Optimization: Performance-first, accessibility-enhanced, Astro-native approach
import Navbar from '../components/public-components/Navbar.astro';
import UnifiedSEO from '../components/UnifiedSEO.astro';
import WaveAnimation from '../components/animations/WaveAnimation.astro';
import ToolIdHeader from '../components/tools/Tool-IdHeader.astro';

// Global CSS - サイト全体のスタイル
import "../styles/global.css";
import "../styles/tools/[tool]/tool-index.css";

export interface Props {
  title: string;
  description: string;
  publishedDate?: string;
  lang?: 'id' | 'ja';
  showProgressBar?: boolean;
  author?: string;
  tags?: string[];
  // ToolIdHeader props
  tool?: string;
  articleCount?: number;
  toolTitle?: string;
  toolDescription?: string;
  iconPath?: string;
  formattedToolName?: string;
  currentYear?: number;
}

const {
  title,
  description,
  publishedDate,
  lang = 'id',
  showProgressBar = true,
  author,
  tags = [],
  tool,
  articleCount = 0,
  toolTitle,
  toolDescription,
  iconPath,
  formattedToolName,
  currentYear,
} = Astro.props;

// Simplified data handling - data management moved to page level
---

<!doctype html>
<html lang={lang}>
  <head>
    <UnifiedSEO
  title={title}
  description={description}
      keywords={tags}
      lang={lang}
  pageType="article"
      author={author}
  publishedDate={publishedDate}
      modifiedDate={publishedDate}
    />
  </head>
  <body>
    <!-- Background Wave Animation -->
    <WaveAnimation 
      backgroundLayer="normal"
      enableStars={true}
      starsCount={6}
      starsOpacity={0.7}
      starsAnimationDuration="4s"
      starsColor="oklch(0.7 0.3 296.9)"
      starsBrightness={1.3}
      starsSize={1.1}
      starsGlow={true}
    />

    <!-- Navigation Bar -->
    <Navbar variant="default" theme="auto" />

    <!-- Enhanced Article Container with Modern Design -->
    <div class='article-layout-container'>
      <!-- Reading Progress Bar -->
      {
        showProgressBar && (
          <div class='reading-progress-container'>
            <div class='reading-progress-bar' id='reading-progress' />
        </div>
      )
    }

      <!-- Enhanced Main Content Area with Navbar Spacing -->
      <main class='article-main-content' style='padding-top: 5rem;'>
        <div class='article-content-wrapper'>
          <!-- Tool ID Header -->
          {tool && iconPath && formattedToolName && currentYear && (
            <ToolIdHeader 
              tool={tool} 
              articleCount={articleCount}
              title={toolTitle || ''}
              description={toolDescription || ''}
              iconPath={iconPath}
              formattedToolName={formattedToolName}
              currentYear={currentYear}
            />
          )}

          <!-- Page Content Slot -->
          <div class='page-content'>
        <slot />
          </div>

          <!-- Optimized Article Footer with Enhanced Actions (only for article pages) -->
          {!tool && (
            <footer class='article-footer' role='contentinfo'>
            <div class='article-actions' role='group' aria-label='Article actions'>
              <button 
                class='action-btn share-btn' 
                type='button'
                aria-label='Share this article'
                title='Share article'
              >
                <svg fill='none' stroke='currentColor' viewBox='0 0 24 24' aria-hidden='true'>
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z'
                  />
                </svg>
                <span>Share</span>
              </button>

              <button
                class='action-btn bookmark-btn'
                type='button'
                aria-label='Bookmark this article'
                title='Bookmark article'
              >
                <svg fill='none' stroke='currentColor' viewBox='0 0 24 24' aria-hidden='true'>
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z'
                  />
                </svg>
                <span>Bookmark</span>
              </button>

              <button
                class='action-btn print-btn'
                type='button'
                aria-label='Print this article'
                title='Print article'
                onclick='window.print()'
              >
                <svg fill='none' stroke='currentColor' viewBox='0 0 24 24' aria-hidden='true'>
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z'
                  />
                </svg>
                <span>Print</span>
              </button>
            </div>

            <nav class='article-navigation' aria-label='Article navigation'>
              <a 
                href='/tools' 
                class='nav-link back-to-tools'
                aria-label='Return to tools page'
                title='Back to tools'
              >
                <svg fill='none' stroke='currentColor' viewBox='0 0 24 24' aria-hidden='true'>
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M10 19l-7-7m0 0l7-7m-7 7h18'
                  />
                </svg>
                <span>Back to Tools</span>
              </a>
            </nav>
          </footer>
          )}
        </div>
    </main>
  </div>

    <!-- Optimized Astro-native Scripts -->
    {showProgressBar && !tool && (
      <script is:inline>
        // Optimized reading progress functionality (only for article pages)
        (() => {
          const progressBar = document.getElementById('reading-progress');
          if (!progressBar) return;
          
          const updateProgress = () => {
            const article = document.querySelector('.page-content');
            if (!article) return;
            
            const scrollTop = window.pageYOffset;
            const docHeight = article.offsetHeight;
            const winHeight = window.innerHeight;
            const scrollPercent = Math.min(100, Math.max(0, 
              Math.round((scrollTop / (docHeight - winHeight)) * 100)
            ));
            progressBar.style.width = scrollPercent + '%';
          };
          
          // Throttled scroll listener for performance
          let ticking = false;
          const handleScroll = () => {
            if (!ticking) {
              requestAnimationFrame(() => {
                updateProgress();
                ticking = false;
              });
              ticking = true;
            }
          };
          
          window.addEventListener('scroll', handleScroll, { passive: true });
          updateProgress();
        })();
      </script>
    )}
    
    <!-- Enhanced accessibility script -->
    <script is:inline>
      // Optimized accessibility enhancements
      (() => {
        const actionButtons = document.querySelectorAll('.action-btn');
        actionButtons.forEach(btn => {
          btn.addEventListener('keydown', (e) => {
            if (e.key === 'Enter' || e.key === ' ') {
              e.preventDefault();
              btn.click();
            }
          });
        });
      })();
    </script>
  </body>
</html>
