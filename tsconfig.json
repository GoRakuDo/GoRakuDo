{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.d.ts",
    "astro.config.mjs",
    "tailwind.config.mjs"
  ],
  "exclude": ["dist", "node_modules", "src/**/*.astro"],
  "compilerOptions": {
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": false,
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true
  }
}
